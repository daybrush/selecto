{
    "name": "vue3-selecto",
    "version": "1.4.0",
    "description": "A Vue 3 Selecto Component that allows you to select elements in the drag area using the mouse or touch.",
    "types": "declaration/index.d.ts",
    "main": "dist/selecto.cjs.js",
    "module": "dist/selecto.esm.js",
    "sideEffects": false,
    "scripts": {
        "serve": "vue-cli-service serve demo",
        "build": "rm -rf dist && rollup -c && npm run declaration",
        "declaration": "rm -rf declaration && tsc -p tsconfig.declaration.json && cp ./src/Selecto.vue.d.ts ./declaration",
        "lint": "vue-cli-service lint --no-fix"
    },
    "keywords": [
        "select",
        "selecto",
        "selection",
        "selectable",
        "moveable",
        "vue",
        "vue3"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/daybrush/selecto/blob/master/packages/vue-selecto"
    },
    "author": "Daybrush",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/daybrush/selecto/issues"
    },
    "homepage": "https://daybrush.com/selecto",
    "files": [
        "./*",
        "dist/*"
    ],
    "dependencies": {
        "selecto": "~1.18.0"
    },
    "devDependencies": {
        "@daybrush/builder": "^0.1.2",
        "@vue/cli-plugin-typescript": "~4.5.0",
        "@vue/cli-service": "~4.5.0",
        "@vue/compiler-sfc": "^3.0.0",
        "rollup-plugin-vue": "^6.0.0",
        "tslib": "^2.3.1",
        "typescript": "^4.5.0",
        "vue": "^3.1.1"
    }
}
