{
    "name": "lit-selecto",
    "version": "1.19.1",
    "description": "A Lit Selecto Component that allows you to select elements in the drag area using the mouse or touch.",
    "types": "declaration/index.d.ts",
    "main": "dist/selecto.cjs.js",
    "module": "dist/selecto.esm.js",
    "sideEffects": false,
    "keywords": [
        "select",
        "selecto",
        "selection",
        "selectable",
        "moveable",
        "lit",
        "lit-html",
        "lit-element"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/daybrush/selecto/blob/master/packages/preact-selecto"
    },
    "author": "Daybrush",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/daybrush/selecto/issues"
    },
    "homepage": "https://daybrush.com/selecto",
    "scripts": {
        "start": "rollup -c rollup.demo.config.js -w",
        "build": "rollup -c && npm run declaration",
        "declaration": "rm -rf declaration && tsc -p tsconfig.declaration.json"
    },
    "files": [
        "./*",
        "dist/*"
    ],
    "devDependencies": {
        "@daybrush/builder": "^0.1.2",
        "lit-element": "^2.2.1",
        "tslint": "^5.20.1",
        "typescript": "^4.5.0"
    },
    "dependencies": {
        "selecto": "~1.19.1"
    }
}
